<!DOCTYPE html>
<html>
	<!-- ********************************************************************************************* -->
	<!-- ***************************** Define the metadata of the website **************************** -->
	<!-- ********************************************************************************************* -->
	<head>
	    <meta charset="utf-8" />												<!-- ALl special chars -->
	    <link href="goo.gl/361Vei" rel="stylesheet" type="text/css">			<!-- CSS File from BootStrap-->
	    <link href="https://bootswatch.com/4/superhero/bootstrap.min.css" rel="stylesheet" type="text/css"/>
	    
	    <link rel="icon" href="favicon.png" />									<!-- Small icon in tab -->
	    <title>Hello World</title>
	    <meta name="description" content="">
	    <meta name="keywords" content="">
	    <meta name="author" content="Guillaume CHRISTE">
	    <meta http-equiv="refresh" content="30">
	    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	    <base href="" target="_blank">
	</head>

	<!-- ********************************************************************************************* -->
	<!-- *************************** Define the content/body of the website ************************** -->
	<!-- ********************************************************************************************* -->
	<body>
	    <div class="navbar navbar-expand-lg navbar-light bg-light">
	      <h5 class="my-0 mr-md-auto font-weight-normal">The Gossip Project</h5>
	      <nav class="my-2 my-md-0 mr-md-3">
	        <a class="p-2 text-dark" href="/">Home</a>
	        <a class="p-2 text-dark" href="/team">Team</a>
	        <a class="p-2 text-dark" href="/contact">Contact</a>
	      </nav>
	      <a class="btn btn-outline-primary" href="#">Sign up</a>
	    </div>

	    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
	      	<h1 class="display-4">The Gossip Project</h1>
	      	<p class="lead">Dear you, </p>
	    </div>
		
		<% (Gossip.all).each_with_index do |gossip, index| %>
	    	<div class="container">
		    	<div class="card p-3 text-center">
			        <div class="card mb-4 shadow-sm">
			          	<div class="card-header">
			            	<h4 class="my-0 font-weight-normal">Title: <%= gossip.title %></h4>
			          	</div>
			          	<div class="card-body">
			           	<ul class="list-unstyled mt-3 mb-4">
			              	<li><%= gossip.content %></li>
			              	<br/>

			              	<li class="text-right"> <h6>Author: <%= User.find(gossip.user_id).first_name + ' ' + User.find(gossip.user_id).last_name.upcase%></h6></li>
			            </ul>
			            	<button type="button" class="btn btn-lg btn-block"><%= link_to "View more", controller: "dynamic_pages", action: "gossip", id: gossip %></button>
			          	</div>
			        </div>
		    	</div>
	    	</div>
	    	<br/>
		<% end %>

	     <footer class="pt-4 my-md-5 pt-md-5 border-top">
	        <div class="row">
	          <div class="col-12 col-md">
	            <img class="mb-2" src="../../assets/brand/bootstrap-solid.svg" alt="" width="24" height="24">
	            <small class="d-block mb-3 text-muted">&copy; 2019</small>
	          </div>
	          <div class="col-6 col-md">
	            <small class="d-block mb-3 text-muted">&copy;Designed by:</small>
	            <p>Guillaume CHRISTE & Selmen M'HAMDI</p>
	          </div>
	        </div>
	     </footer>
	    <!-- Optional JavaScript -->
	    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
	    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
	    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
	</body>
</html>